    "close_date": {
      "type": "Timestamp",
      "config": {
        "label": "Close date",
        "placeholder": "Optional"
      }
    },
    "image": {
      "type": "Image",
      "config": {
        "constraint": {},
        "thumbnails": [],
        "label": "Image"
      }
